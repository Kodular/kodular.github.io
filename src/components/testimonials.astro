---
import testimonials from '../data/testimonials.yml';

interface Testimonial {
	name: string;
	username: string;
	text: string;
}
---

<section class="section team-section py-5 text-center" id="testimonials">
	<div class="container">
		<!--Section heading-->
		<h1 class="section-heading mb-4">Testimonials</h1>
		<!--Section description-->
		<p class="section-description lead grey-text">Read what our users say about Kodular.</p>
		<div class="row">
			{testimonials.map((testimonial: Testimonial, i: number) => (
				<div class="col-md-4 mb-r d-flex align-items-stretch">
					<!--Card-->
					<div class="card testimonial-card hoverable">
						<!--Bacground color-->
						<div class={`card-up ${ ['purple', 'peach', 'aqua'][i % 3] }-gradient`}></div>
						<!--Avatar-->
						<div class="avatar mb-0">
							<img src={`//community.kodular.io/user_avatar/community.kodular.io/${ testimonial.username }/120/1.png`} class="lazy rounded-circle">
						</div>
						<div class="card-body">
							<!--Name-->
							<a class="card-title h4" href={`//community.kodular.io/u/${ testimonial.username }`} target="_blank">{ testimonial.name }</a>
							<hr>
							<!--Quotation-->
							<p><i class="fa fa-quote-left"></i> { testimonial.text }</p>
						</div>
						<!--/.Card-->
					</div>
				</div>
			))}
		</div>
	</div>
</section>
