---
// Fixed import error by using hardcoded social links
const socialLinks = {
  twitter: "https://twitter.com/KodularIO",
  facebook: "https://facebook.com/KodularIO",
  github: "https://github.com/Kodular",
  instagram: "https://instagram.com/KodularIO",
  telegram: "https://t.me/Kodular"
};
---

<footer class="bg-gray-900 text-white pt-16 pb-8">
  <div class="container mx-auto px-4">
    <!-- Main footer content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 mb-12">
      
      <!-- Brand column -->
      <div class="space-y-4">
        <div class="flex items-center space-x-3">
          <img 
            class="w-12 h-12" 
            src="//assets.kodular.io/images/logo/inverted/512x512.png" 
            alt="Kodular Logo"
            width="48"
            height="48"
          />
          <h2 class="text-2xl font-bold text-white">Kodular</h2>
        </div>
        <p class="text-gray-400 max-w-xs">
          Create Android apps with our drag and drop app builder. No coding required!
        </p>
        <p class="flex items-center text-gray-300">
          Koded with 
          <span class="inline-block mx-2">
            <i class="fa fa-heart w-5 h-5 text-red-500"></i>
          </span>
        </p>
      </div>
      
      <!-- Quick Links column -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-white relative inline-block">
          Quick Links
          <div class="absolute -bottom-1 left-0 right-0 h-0.5 bg-primary-500"></div>
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="//creator.kodular.io" class="text-gray-400 hover:text-white flex items-center group">
              <i class="fa fa-info-circle w-4 h-4 mr-2 text-white group-hover:text-white transition-colors"></i>
              My Kodular
            </a>
          </li>
          <li>
            <a href="//community.kodular.io" class="text-gray-400 hover:text-white flex items-center group">
              <i class="fa fa-users w-4 h-4 mr-2 text-white group-hover:text-white transition-colors"></i>
              Community
            </a>
          </li>
          <li>
            <a href="//docs.kodular.io" class="text-gray-400 hover:text-white flex items-center group">
              <i class="fa fa-file-text w-4 h-4 mr-2 text-white group-hover:text-white transition-colors"></i>
              Docs
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Resources column -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-white relative inline-block">
          Resources
          <div class="absolute -bottom-1 left-0 right-0 h-0.5 bg-primary-500"></div>
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="https://blog.kodular.io" target="_blank" class="text-gray-400 hover:text-white flex items-center group">
              <i class="fa fa-newspaper w-4 h-4 mr-2 text-white group-hover:text-white transition-colors"></i>
              Blog
            </a>
          </li>
          <li>
            <a href="https://status.kodular.io" target="_blank" class="text-gray-400 hover:text-white flex items-center group">
              <i class="fa fa-server w-4 h-4 mr-2 text-white group-hover:text-white transition-colors"></i>
              Server Status
            </a>
          </li>
          <li>
            <a href="https://translate.kodular.io" target="_blank" class="text-gray-400 hover:text-white flex items-center group">
              <i class="fa fa-language w-4 h-4 mr-2 text-white group-hover:text-white transition-colors"></i>
              Help Translate
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Company column -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-white relative inline-block">
          Company
          <div class="absolute -bottom-1 left-0 right-0 h-0.5 bg-primary-500"></div>
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/about" class="text-gray-400 hover:text-white flex items-center group">
              <i class="fa fa-info-circle w-4 h-4 mr-2 text-white group-hover:text-white transition-colors"></i>
              About Us
            </a>
          </li>
          <li>
            <a href="/team" class="text-gray-400 hover:text-white flex items-center group">
              <i class="fa fa-users w-4 h-4 mr-2 text-white group-hover:text-white transition-colors"></i>
              Our Team
            </a>
          </li>
          <li class="pt-2">
            <h4 class="text-md font-medium text-gray-300 mb-2">Contact</h4>
            <a href="mailto:support@kodular.io" class="text-gray-400 hover:text-white flex items-center group mb-1">
              <i class="fa fa-envelope w-4 h-4 mr-2 text-white group-hover:text-white transition-colors"></i>
              support@kodular.io
            </a>
            <p class="text-gray-400 text-sm">
              Support: <span class="text-gray-300">Sat - Sun</span>
            </p>
          </li>
        </ul>
      </div>
      
      <!-- Connect column -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-white relative inline-block">
          Connect With Us
          <div class="absolute -bottom-1 left-0 right-0 h-0.5 bg-primary-500"></div>
        </h3>
        <div class="flex flex-wrap gap-3">
          <!-- Twitter/X -->
          <a 
            href={socialLinks.twitter} 
            target="_blank" 
            class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center hover:bg-primary-600 transition-colors"
            aria-label="Twitter"
          >
            <i class="fab fa-twitter"></i>
          </a>
          
          <!-- Facebook -->
          <a 
            href={socialLinks.facebook} 
            target="_blank" 
            class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center hover:bg-primary-600 transition-colors"
            aria-label="Facebook"
          >
            <i class="fab fa-facebook"></i>
          </a>
          
          <!-- Instagram -->
          <a 
            href={socialLinks.instagram} 
            target="_blank" 
            class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center hover:bg-primary-600 transition-colors"
            aria-label="Instagram"
          >
            <i class="fab fa-instagram"></i>
          </a>
          
          <!-- GitHub -->
          <a 
            href={socialLinks.github} 
            target="_blank" 
            class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center hover:bg-primary-600 transition-colors"
            aria-label="GitHub"
          >
            <i class="fab fa-github"></i>
          </a>
        </div>
        
        <div class="mt-6">
          <a href="#" class="inline-flex items-center text-gray-400 hover:text-white group">
            <span>Back to top</span>
            <i class="fa fa-arrow-up w-4 h-4 ml-1 group-hover:-translate-y-1 transition-transform"></i>
          </a>
        </div>
      </div>
    </div>
    
    <!-- Divider -->
    <div class="h-px bg-gray-800 my-8"></div>
    
    <!-- Copyright -->
    <div class="flex flex-col md:flex-row justify-between items-center text-gray-500 text-sm">
      <p>Junnovate Limited &copy; {new Date().getFullYear()} - Kodular &reg; | All Rights Reserved</p>
      <div class="mt-4 md:mt-0 flex space-x-4">
        <a href="https://legal.junnovate.com/kodular/privacy/" class="hover:text-white transition-colors">Privacy Policy</a>
        <a href="https://legal.junnovate.com/kodular/tos/" class="hover:text-white transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
