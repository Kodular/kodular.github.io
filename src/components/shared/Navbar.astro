---

<nav class="fixed top-0 z-50 w-full bg-primary-500 text-white shadow-md">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between py-3">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <img 
          src="//assets.kodular.io/images/logo/inverted/512x512.png" 
          alt="Kodular Logo" 
          class="h-8 w-auto"
        />
        <span class="text-xl font-bold">Kodular</span>
      </a>
      
      <!-- Mobile menu button -->
      <button 
        id="menu-toggle" 
        class="lg:hidden focus:outline-none" 
        aria-label="Toggle navigation"
        aria-expanded="false"
      >
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
      
      <!-- Desktop and Mobile Navigation -->
      <div id="navbar" class="hidden lg:flex lg:items-center lg:justify-end lg:w-auto absolute lg:static top-full left-0 right-0 bg-primary-500 lg:bg-transparent shadow-md lg:shadow-none">
        <div class="container mx-auto px-4 lg:p-0 flex flex-col lg:flex-row lg:items-center w-full">
          <!-- All Navigation Links in a single group -->
          <ul class="lg:flex lg:items-center lg:space-x-6 py-2 lg:py-0 border-b lg:border-b-0 border-primary-400">
            <li>
              <a 
                href="/pricing" 
                class={`flex items-center py-3 lg:py-2 px-2 lg:px-0 hover:bg-primary-400 lg:hover:bg-transparent lg:hover:text-white/80 transition-all duration-200 ${Astro.url.pathname.startsWith('/pricing') ? 'border-l-4 border-white bg-primary-400/30 lg:border-l-0 lg:border-b-2 lg:border-white lg:bg-transparent lg:pb-1 lg:text-white' : ''}`}
              >
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                </svg>
                <span>Pricing</span>
              </a>
            </li>
            <li class="mt-2 lg:mt-0">
              <a 
                href="https://c.kodular.io" 
                target="_blank" 
                class="flex items-center justify-center px-4 py-2 bg-pink-500 hover:bg-pink-600 transition-colors rounded-md"
              >
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 3.5a1.5 1.5 0 013 0V4a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-.5a1.5 1.5 0 000 3h.5a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-.5a1.5 1.5 0 00-3 0v.5a1 1 0 01-1 1H6a1 1 0 01-1-1v-3a1 1 0 00-1-1h-.5a1.5 1.5 0 010-3H4a1 1 0 001-1V6a1 1 0 011-1h3a1 1 0 001-1v-.5z"></path>
                </svg>
                <span>Create Apps!</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  // Toggle mobile menu
  const menuToggle = document.getElementById('menu-toggle');
  const navbar = document.getElementById('navbar');
  
  if (menuToggle && navbar) {
    menuToggle.addEventListener('click', () => {
      navbar.classList.toggle('hidden');
      const expanded = navbar.classList.contains('hidden') ? 'false' : 'true';
      menuToggle.setAttribute('aria-expanded', expanded);
    });
  }
</script>
