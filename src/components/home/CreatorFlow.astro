---

<!-- Creator Flow Section -->
<section class="py-24 bg-white overflow-hidden">
  <div class="container mx-auto px-4">
    <!-- Section heading -->
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-4 relative inline-block">
        Blocks + Components = Your App
        <div class="absolute -bottom-2 left-0 right-0 h-1 bg-gradient-to-r from-primary-400 to-primary-600 rounded-full"></div>
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Watch the magic happen as visual blocks and powerful components come together to create your perfect app
      </p>
    </div>

    <!-- Flow Visualization -->
    <div class="relative flex items-center justify-center min-h-[500px]">
      <!-- Left Side - Blocks -->
      <div class="absolute left-0 w-1/3 h-full flex flex-col justify-center z-10">
        <!-- Block elements with better spacing -->
        <div class="blocks-flow-left space-y-6">
          <!-- Programming Block 1 -->
          <div class="block-element bg-blue-500 text-white rounded-lg p-3 shadow-lg animate-float-left-1 transform -translate-y-12">
            <div class="flex items-center space-x-2">
              <i class="fa fa-play text-sm"></i>
              <span class="text-sm font-medium">When Button Clicked</span>
            </div>
          </div>
          
          <!-- Programming Block 2 -->
          <div class="block-element bg-green-500 text-white rounded-lg p-3 shadow-lg animate-float-left-2 transform -translate-y-4">
            <div class="flex items-center space-x-2">
              <i class="fa fa-volume-up text-sm"></i>
              <span class="text-sm font-medium">Play Sound</span>
            </div>
          </div>
          
          <!-- Programming Block 3 -->
          <div class="block-element bg-purple-500 text-white rounded-lg p-3 shadow-lg animate-float-left-3 transform translate-y-4">
            <div class="flex items-center space-x-2">
              <i class="fa fa-database text-sm"></i>
              <span class="text-sm font-medium">Store Data</span>
            </div>
          </div>
          
          <!-- Programming Block 4 -->
          <div class="block-element bg-red-500 text-white rounded-lg p-3 shadow-lg animate-float-left-4 transform translate-y-12">
            <div class="flex items-center space-x-2">
              <i class="fa fa-share text-sm"></i>
              <span class="text-sm font-medium">Share Content</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Center - Smartphone -->
      <div class="relative z-10 flex-shrink-0">
        <div class="smartphone-container relative">
          <!-- Phone Frame -->
          <div class="w-64 h-[500px] bg-gray-900 rounded-[3rem] p-3 shadow-2xl">
            <!-- Screen -->
            <div class="w-full h-full bg-gradient-to-br from-primary-400 to-purple-600 rounded-[2.5rem] p-6 flex flex-col justify-center items-center text-white relative overflow-hidden">
              <!-- App UI Elements -->
              <div class="absolute inset-0 opacity-20">
                <!-- Background pattern -->
                <div class="absolute top-4 left-4 w-8 h-8 border-2 border-white rounded-full"></div>
                <div class="absolute top-4 right-4 w-6 h-6 border-2 border-white rounded"></div>
                <div class="absolute bottom-20 left-6 w-12 h-2 bg-white rounded-full"></div>
                <div class="absolute bottom-16 right-6 w-8 h-2 bg-white rounded-full"></div>
              </div>
              
              <!-- Main App Content -->
              <div class="text-center z-10">
                <div class="w-16 h-16 bg-white/20 rounded-2xl mb-4 flex items-center justify-center mx-auto">
                  <i class="fa fa-mobile-alt text-2xl"></i>
                </div>
                <h3 class="text-lg font-bold mb-2">Your Amazing App</h3>
                <p class="text-sm opacity-90 mb-4">Built with Kodular</p>
                
                <!-- Interactive Elements -->
                <div class="space-y-3">
                  <div class="bg-white/20 rounded-lg p-2 text-xs">Button Component</div>
                  <div class="bg-white/20 rounded-lg p-2 text-xs">Audio Player</div>
                  <div class="bg-white/20 rounded-lg p-2 text-xs">Database Storage</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


      <!-- Right Side - Components -->
      <div class="absolute right-0 w-1/3 h-full flex flex-col justify-center z-10">
        <!-- Component elements with better spacing -->
        <div class="components-flow-right space-y-6">
          <!-- Component 1 -->
          <div class="component-element bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-lg p-3 shadow-lg animate-float-right-1 transform -translate-y-12">
            <div class="flex items-center space-x-2">
              <i class="fa fa-mouse-pointer text-sm"></i>
              <span class="text-sm font-medium">Button</span>
            </div>
          </div>
          
          <!-- Component 2 -->
          <div class="component-element bg-gradient-to-r from-orange-500 to-red-500 text-white rounded-lg p-3 shadow-lg animate-float-right-2 transform -translate-y-4">
            <div class="flex items-center space-x-2">
              <i class="fa fa-image text-sm"></i>
              <span class="text-sm font-medium">Image</span>
            </div>
          </div>
          
          <!-- Component 3 -->
          <div class="component-element bg-gradient-to-r from-teal-500 to-blue-500 text-white rounded-lg p-3 shadow-lg animate-float-right-3 transform translate-y-4">
            <div class="flex items-center space-x-2">
              <i class="fa fa-list text-sm"></i>
              <span class="text-sm font-medium">List View</span>
            </div>
          </div>
          
          <!-- Component 4 -->
          <div class="component-element bg-gradient-to-r from-indigo-500 to-purple-500 text-white rounded-lg p-3 shadow-lg animate-float-right-4 transform translate-y-12">
            <div class="flex items-center space-x-2">
              <i class="fa fa-wifi text-sm"></i>
              <span class="text-sm font-medium">Web API</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
/* Floating animations for blocks (left side) */
@keyframes float-left-1 {
  0%, 100% { transform: translateX(-20px) translateY(0px) rotate(-2deg); }
  50% { transform: translateX(-10px) translateY(-10px) rotate(1deg); }
}

@keyframes float-left-2 {
  0%, 100% { transform: translateX(-15px) translateY(-5px) rotate(1deg); }
  50% { transform: translateX(-5px) translateY(-15px) rotate(-2deg); }
}

@keyframes float-left-3 {
  0%, 100% { transform: translateX(-25px) translateY(-10px) rotate(-1deg); }
  50% { transform: translateX(-15px) translateY(0px) rotate(2deg); }
}

@keyframes float-left-4 {
  0%, 100% { transform: translateX(-10px) translateY(-15px) rotate(2deg); }
  50% { transform: translateX(-20px) translateY(-5px) rotate(-1deg); }
}

/* Floating animations for components (right side) */
@keyframes float-right-1 {
  0%, 100% { transform: translateX(20px) translateY(0px) rotate(2deg); }
  50% { transform: translateX(10px) translateY(-10px) rotate(-1deg); }
}

@keyframes float-right-2 {
  0%, 100% { transform: translateX(15px) translateY(-5px) rotate(-1deg); }
  50% { transform: translateX(5px) translateY(-15px) rotate(2deg); }
}

@keyframes float-right-3 {
  0%, 100% { transform: translateX(25px) translateY(-10px) rotate(1deg); }
  50% { transform: translateX(15px) translateY(0px) rotate(-2deg); }
}

@keyframes float-right-4 {
  0%, 100% { transform: translateX(10px) translateY(-15px) rotate(-2deg); }
  50% { transform: translateX(20px) translateY(-5px) rotate(1deg); }
}

/* Apply animations */
.animate-float-left-1 { animation: float-left-1 6s ease-in-out infinite; }
.animate-float-left-2 { animation: float-left-2 7s ease-in-out infinite 1s; }
.animate-float-left-3 { animation: float-left-3 8s ease-in-out infinite 2s; }
.animate-float-left-4 { animation: float-left-4 6.5s ease-in-out infinite 3s; }

.animate-float-right-1 { animation: float-right-1 6s ease-in-out infinite 0.5s; }
.animate-float-right-2 { animation: float-right-2 7s ease-in-out infinite 1.5s; }
.animate-float-right-3 { animation: float-right-3 8s ease-in-out infinite 2.5s; }
.animate-float-right-4 { animation: float-right-4 6.5s ease-in-out infinite 3.5s; }


/* Block and component positioning */
.blocks-flow-left {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  space-y: 1.5rem;
}

.components-flow-right {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  space-y: 1.5rem;
}

.block-element, .component-element {
  max-width: 200px;
  backdrop-filter: blur(10px);
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .blocks-flow-left, .components-flow-right {
    display: none;
  }
  
  .smartphone-container {
    transform: scale(0.8);
  }
}
</style>