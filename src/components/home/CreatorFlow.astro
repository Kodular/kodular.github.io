---

<!-- Creator Flow Section -->
<section class="py-24 bg-white overflow-hidden">
  <div class="container mx-auto px-4">
    <!-- Section heading -->
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-4 relative inline-block">
        Blocks + Components = Your App
        <div class="absolute -bottom-2 left-0 right-0 h-1 bg-gradient-to-r from-primary-400 to-primary-600 rounded-full"></div>
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Watch the magic happen as visual blocks and powerful components come together to create your perfect app
      </p>
    </div>

    <!-- Flow Visualization -->
    <div class="relative flex items-center justify-center min-h-[500px]">
      <!-- Left Side - Blocks -->
      <div class="absolute left-0 w-1/3 h-full flex flex-col justify-center z-10">
        <!-- Block elements with better spacing -->
        <div class="blocks-flow-left space-y-6">
          <!-- Programming Block 1 -->
          <div class="block-element bg-blue-500 text-white rounded-lg p-3 shadow-lg animate-float-left-1 transform -translate-y-12">
            <div class="flex items-center space-x-2">
              <i class="fa fa-play text-sm"></i>
              <span class="text-sm font-medium">When Button Clicked</span>
            </div>
          </div>
          
          <!-- Programming Block 2 -->
          <div class="block-element bg-green-500 text-white rounded-lg p-3 shadow-lg animate-float-left-2 transform -translate-y-4">
            <div class="flex items-center space-x-2">
              <i class="fa fa-volume-up text-sm"></i>
              <span class="text-sm font-medium">Play Sound</span>
            </div>
          </div>
          
          <!-- Programming Block 3 -->
          <div class="block-element bg-purple-500 text-white rounded-lg p-3 shadow-lg animate-float-left-3 transform translate-y-4">
            <div class="flex items-center space-x-2">
              <i class="fa fa-database text-sm"></i>
              <span class="text-sm font-medium">Store Data</span>
            </div>
          </div>
          
          <!-- Programming Block 4 -->
          <div class="block-element bg-red-500 text-white rounded-lg p-3 shadow-lg animate-float-left-4 transform translate-y-12">
            <div class="flex items-center space-x-2">
              <i class="fa fa-share text-sm"></i>
              <span class="text-sm font-medium">Share Content</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Center - Smartphone -->
      <div class="relative z-10 flex-shrink-0">
        <div class="smartphone-container relative">
          <!-- Phone Frame with 2D white design -->
          <div class="w-72 h-[540px] bg-gradient-to-b from-white via-gray-50 to-gray-100 rounded-[3.5rem] p-1 shadow-2xl shadow-gray-400/50 relative border-2 border-gray-200">
            <!-- Phone highlights and details -->
            <div class="absolute inset-2 rounded-[3rem] bg-gradient-to-b from-white/40 to-transparent"></div>
            <div class="absolute top-6 left-1/2 transform -translate-x-1/2 w-20 h-1.5 bg-gray-400 rounded-full shadow-inner"></div>
            <div class="absolute top-4 right-6 w-3 h-3 bg-gray-300 rounded-full shadow-inner"></div>
            
            
            <!-- Screen with white bezel -->
            <div class="w-full h-full bg-white rounded-[3.2rem] p-2 relative shadow-inner select-none cursor-default">
              <div class="w-full h-full bg-white rounded-[2.8rem] overflow-hidden relative border border-gray-100">
                
                
                <!-- Status Bar -->
                <div class="absolute top-0 left-0 right-0 h-12 bg-white flex items-center justify-between px-6 text-gray-900 text-xs font-medium z-20">
                  <div class="flex items-center space-x-2 w-20">
                    <i class="fa fa-signal text-xs"></i>
                    <span class="text-xs font-medium">Kodular</span>
                  </div>
                  <div class="absolute left-1/2 transform -translate-x-1/2">
                    <span class="font-semibold">9:41</span>
                  </div>
                  <div class="flex items-center space-x-2 w-20 justify-end">
                    <i class="fa fa-wifi text-xs"></i>
                    <i class="fa fa-battery-full text-xs"></i>
                  </div>
                </div>
                
                <!-- App Content - Material Design 3 Expressive -->
                <div class="pt-12 h-full bg-gradient-to-br from-purple-50 via-pink-50 to-orange-50 relative overflow-hidden">
                  <!-- Material Design 3 App Header -->
                  <div class="bg-gradient-to-r from-purple-500 via-pink-500 to-orange-400 px-6 py-6 relative overflow-hidden">
                    <!-- Decorative shapes -->
                    <div class="absolute top-0 right-0 w-20 h-20 bg-white/10 rounded-full transform translate-x-6 -translate-y-6"></div>
                    <div class="absolute bottom-0 left-0 w-16 h-16 bg-white/15 rounded-full transform -translate-x-4 translate-y-4"></div>
                    
                    <div class="flex items-center justify-between relative z-10">
                      <div class="flex items-center space-x-3">
                        <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center">
                          <i class="fa fa-rocket text-white text-lg"></i>
                        </div>
                        <div>
                          <h3 class="font-bold text-white text-sm">Creative Studio</h3>
                          <p class="text-xs text-white/80">Express yourself</p>
                        </div>
                      </div>
                      <div class="w-8 h-8 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center">
                        <i class="fa fa-bell text-white text-xs"></i>
                      </div>
                    </div>
                  </div>
                  
                  <!-- App Body with Material 3 cards -->
                  <div class="p-4 space-y-4 pb-20">
                    <!-- Material 3 Hero Card with organic shapes -->
                    <div class="bg-gradient-to-br from-purple-400 via-pink-400 to-orange-400 rounded-3xl p-6 text-white shadow-xl relative overflow-hidden animate-breathe">
                      <!-- Organic background shapes -->
                      <div class="absolute top-0 right-0 w-24 h-24 bg-white/10 rounded-full transform translate-x-8 -translate-y-8"></div>
                      <div class="absolute bottom-0 left-0 w-20 h-20 bg-white/15 rounded-full transform -translate-x-6 translate-y-6"></div>
                      
                      <div class="relative z-10">
                        <h4 class="font-bold text-sm mb-2">Unleash Creativity</h4>
                        <p class="text-xs opacity-90 mb-4">Design, build, and share amazing apps with expressive tools</p>
                        <div class="bg-white/25 backdrop-blur-sm rounded-2xl py-3 px-6 text-xs font-semibold text-center shadow-lg animate-pulse-glow">
                          Start Creating
                        </div>
                      </div>
                    </div>
                    
                    <!-- Material 3 Feature Cards Grid -->
                    <div class="grid grid-cols-2 gap-3">
                      <!-- Design Tools Card -->
                      <div class="bg-gradient-to-br from-purple-100 to-purple-200 rounded-3xl p-4 shadow-md border border-purple-200/50 relative overflow-hidden">
                        <div class="absolute top-0 right-0 w-12 h-12 bg-purple-300/30 rounded-full transform translate-x-4 -translate-y-4"></div>
                        <div class="w-10 h-10 bg-gradient-to-br from-purple-400 to-purple-600 rounded-2xl flex items-center justify-center mb-3 shadow-lg">
                          <i class="fa fa-palette text-white text-xs"></i>
                        </div>
                        <p class="text-xs font-bold text-purple-900 mb-1">Design</p>
                        <p class="text-[10px] text-purple-700">Express ideas</p>
                      </div>
                      
                      <!-- Analytics Card -->
                      <div class="bg-gradient-to-br from-pink-100 to-pink-200 rounded-3xl p-4 shadow-md border border-pink-200/50 relative overflow-hidden">
                        <div class="absolute top-0 right-0 w-12 h-12 bg-pink-300/30 rounded-full transform translate-x-4 -translate-y-4"></div>
                        <div class="w-10 h-10 bg-gradient-to-br from-pink-400 to-pink-600 rounded-2xl flex items-center justify-center mb-3 shadow-lg">
                          <i class="fa fa-chart-line text-white text-xs"></i>
                        </div>
                        <p class="text-xs font-bold text-pink-900 mb-1">Insights</p>
                        <p class="text-[10px] text-pink-700">Track success</p>
                      </div>
                      
                      <!-- Community Card -->
                      <div class="bg-gradient-to-br from-orange-100 to-orange-200 rounded-3xl p-4 shadow-md border border-orange-200/50 relative overflow-hidden">
                        <div class="absolute top-0 right-0 w-12 h-12 bg-orange-300/30 rounded-full transform translate-x-4 -translate-y-4"></div>
                        <div class="w-10 h-10 bg-gradient-to-br from-orange-400 to-orange-600 rounded-2xl flex items-center justify-center mb-3 shadow-lg">
                          <i class="fa fa-users text-white text-xs"></i>
                        </div>
                        <p class="text-xs font-bold text-orange-900 mb-1">Connect</p>
                        <p class="text-[10px] text-orange-700">Join creators</p>
                      </div>
                      
                      <!-- Tools Card -->
                      <div class="bg-gradient-to-br from-teal-100 to-teal-200 rounded-3xl p-4 shadow-md border border-teal-200/50 relative overflow-hidden">
                        <div class="absolute top-0 right-0 w-12 h-12 bg-teal-300/30 rounded-full transform translate-x-4 -translate-y-4"></div>
                        <div class="w-10 h-10 bg-gradient-to-br from-teal-400 to-teal-600 rounded-2xl flex items-center justify-center mb-3 shadow-lg">
                          <i class="fa fa-tools text-white text-xs"></i>
                        </div>
                        <p class="text-xs font-bold text-teal-900 mb-1">Build</p>
                        <p class="text-[10px] text-teal-700">Power tools</p>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Material 3 Navigation Rail -->
                  <div class="absolute bottom-0 left-0 right-0 bg-white/80 backdrop-blur-xl border-t border-purple-200/30 px-4 py-4">
                    <div class="flex justify-around items-center">
                      <div class="flex flex-col items-center space-y-1">
                        <div class="w-8 h-8 bg-gradient-to-br from-purple-400 to-purple-600 rounded-2xl flex items-center justify-center shadow-lg">
                          <i class="fa fa-home text-white text-[8px]"></i>
                        </div>
                        <span class="text-[8px] text-purple-600 font-semibold">Home</span>
                      </div>
                      <div class="flex flex-col items-center space-y-1">
                        <div class="w-8 h-8 bg-gray-100 rounded-2xl flex items-center justify-center">
                          <i class="fa fa-compass text-gray-400 text-[8px]"></i>
                        </div>
                        <span class="text-[8px] text-gray-400">Explore</span>
                      </div>
                      <div class="flex flex-col items-center space-y-1">
                        <div class="w-8 h-8 bg-gray-100 rounded-2xl flex items-center justify-center">
                          <i class="fa fa-heart text-gray-400 text-[8px]"></i>
                        </div>
                        <span class="text-[8px] text-gray-400">Favorites</span>
                      </div>
                      <div class="flex flex-col items-center space-y-1">
                        <div class="w-8 h-8 bg-gray-100 rounded-2xl flex items-center justify-center">
                          <i class="fa fa-user text-gray-400 text-[8px]"></i>
                        </div>
                        <span class="text-[8px] text-gray-400">Profile</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
          </div>
        </div>
      </div>


      <!-- Right Side - Components -->
      <div class="absolute right-0 w-1/3 h-full flex flex-col justify-center z-10">
        <!-- Component elements with better spacing -->
        <div class="components-flow-right space-y-6">
          <!-- Component 1 -->
          <div class="component-element bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-lg p-3 shadow-lg animate-float-right-1 transform -translate-y-12">
            <div class="flex items-center space-x-2">
              <i class="fa fa-mouse-pointer text-sm"></i>
              <span class="text-sm font-medium">Button</span>
            </div>
          </div>
          
          <!-- Component 2 -->
          <div class="component-element bg-gradient-to-r from-orange-500 to-red-500 text-white rounded-lg p-3 shadow-lg animate-float-right-2 transform -translate-y-4">
            <div class="flex items-center space-x-2">
              <i class="fa fa-image text-sm"></i>
              <span class="text-sm font-medium">Image</span>
            </div>
          </div>
          
          <!-- Component 3 -->
          <div class="component-element bg-gradient-to-r from-teal-500 to-blue-500 text-white rounded-lg p-3 shadow-lg animate-float-right-3 transform translate-y-4">
            <div class="flex items-center space-x-2">
              <i class="fa fa-list text-sm"></i>
              <span class="text-sm font-medium">List View</span>
            </div>
          </div>
          
          <!-- Component 4 -->
          <div class="component-element bg-gradient-to-r from-indigo-500 to-purple-500 text-white rounded-lg p-3 shadow-lg animate-float-right-4 transform translate-y-12">
            <div class="flex items-center space-x-2">
              <i class="fa fa-wifi text-sm"></i>
              <span class="text-sm font-medium">Web API</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
/* Floating animations for blocks (left side) */
@keyframes float-left-1 {
  0%, 100% { transform: translateX(-20px) translateY(0px) rotate(-2deg); }
  50% { transform: translateX(-10px) translateY(-10px) rotate(1deg); }
}

@keyframes float-left-2 {
  0%, 100% { transform: translateX(-15px) translateY(-5px) rotate(1deg); }
  50% { transform: translateX(-5px) translateY(-15px) rotate(-2deg); }
}

@keyframes float-left-3 {
  0%, 100% { transform: translateX(-25px) translateY(-10px) rotate(-1deg); }
  50% { transform: translateX(-15px) translateY(0px) rotate(2deg); }
}

@keyframes float-left-4 {
  0%, 100% { transform: translateX(-10px) translateY(-15px) rotate(2deg); }
  50% { transform: translateX(-20px) translateY(-5px) rotate(-1deg); }
}

/* Floating animations for components (right side) */
@keyframes float-right-1 {
  0%, 100% { transform: translateX(20px) translateY(0px) rotate(2deg); }
  50% { transform: translateX(10px) translateY(-10px) rotate(-1deg); }
}

@keyframes float-right-2 {
  0%, 100% { transform: translateX(15px) translateY(-5px) rotate(-1deg); }
  50% { transform: translateX(5px) translateY(-15px) rotate(2deg); }
}

@keyframes float-right-3 {
  0%, 100% { transform: translateX(25px) translateY(-10px) rotate(1deg); }
  50% { transform: translateX(15px) translateY(0px) rotate(-2deg); }
}

@keyframes float-right-4 {
  0%, 100% { transform: translateX(10px) translateY(-15px) rotate(-2deg); }
  50% { transform: translateX(20px) translateY(-5px) rotate(1deg); }
}

/* Apply animations */
.animate-float-left-1 { animation: float-left-1 6s ease-in-out infinite; }
.animate-float-left-2 { animation: float-left-2 7s ease-in-out infinite 1s; }
.animate-float-left-3 { animation: float-left-3 8s ease-in-out infinite 2s; }
.animate-float-left-4 { animation: float-left-4 6.5s ease-in-out infinite 3s; }

.animate-float-right-1 { animation: float-right-1 6s ease-in-out infinite 0.5s; }
.animate-float-right-2 { animation: float-right-2 7s ease-in-out infinite 1.5s; }
.animate-float-right-3 { animation: float-right-3 8s ease-in-out infinite 2.5s; }
.animate-float-right-4 { animation: float-right-4 6.5s ease-in-out infinite 3.5s; }


/* Block and component positioning */
.blocks-flow-left {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  space-y: 1.5rem;
}

.components-flow-right {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  space-y: 1.5rem;
}

.block-element, .component-element {
  max-width: 200px;
  backdrop-filter: blur(10px);
}


/* Enhanced phone effects */
.smartphone-container {
  filter: drop-shadow(0 25px 50px rgba(0, 0, 0, 0.15));
}

/* Breathing animation for app elements */
@keyframes breathe {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.02); }
}

.animate-breathe {
  animation: breathe 4s ease-in-out infinite;
}

/* Pulse animation for active elements */
@keyframes pulse-glow {
  0%, 100% { box-shadow: 0 0 20px rgba(59, 130, 246, 0.3); }
  50% { box-shadow: 0 0 30px rgba(59, 130, 246, 0.6); }
}

.animate-pulse-glow {
  animation: pulse-glow 2s ease-in-out infinite;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .blocks-flow-left, .components-flow-right {
    display: none;
  }
  
  .smartphone-container {
    transform: scale(0.8);
  }
}
</style>