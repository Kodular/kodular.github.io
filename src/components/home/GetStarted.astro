<!-- Get Started Section -->
<section class="py-24 bg-white" id="getstarted">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center justify-between gap-12">
      <!-- Content column -->
      <div class="md:w-1/2 text-center md:text-left">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Kodular, powerful tools for you</h2>
        <p class="text-xl text-gray-600 mb-8">We provide several "modules" (services) to create Android apps without coding, just
          scroll down a little bit to check them!</p>
        <div class="hidden md:block h-1 w-24 bg-primary-500 rounded-full"></div>
      </div>
      
      <!-- Image column with hover effect -->
      <div class="md:w-1/2">
        <a 
          href="https://community.kodular.io/t/kodular-fenix/132021" 
          target="_blank"
          class="block overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2"
        >
          <img 
            src="/images/fenix_3d.png" 
            class="w-full h-auto" 
            alt="Kodular Fenix"
            loading="lazy"
          >
        </a>
      </div>
    </div>
  </div>
</section>
