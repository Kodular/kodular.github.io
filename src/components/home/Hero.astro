---
---

<!-- Hero Section with blurred background -->  
<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background image with blur effect -->  
  <div class="absolute inset-0 z-0">
    <div 
      class="absolute inset-0 bg-cover bg-center bg-no-repeat" 
      style="background-image: url('/images/background.png');"
    ></div>
    <!-- Blur overlay with 100px blur as requested -->  
    <div class="absolute inset-0 bg-blur-hero bg-primary-500/30"></div>
  </div>

  <!-- Content -->  
  <div class="container mx-auto px-4 relative z-10 text-center">
    <div class="max-w-4xl mx-auto">
      <!-- Animated title with playful design -->  
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 animate-fade-in-up">
        KODULAR
      </h1>
      
      <!-- Subtitle with animation delay -->  
      <h2 class="text-xl md:text-2xl text-white/90 mb-10 animate-fade-in-up animate-delay-200">
        Much more than a modern app creator without coding
      </h2>
      
      <!-- CTA buttons with modern design -->  
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in-up animate-delay-400">
        <a 
          href="https://c.kodular.io" 
          target="_blank" 
          class="px-8 py-4 bg-primary-500 text-white rounded-full font-medium hover:bg-primary-600 transition-colors shadow-lg hover:shadow-xl flex items-center justify-center gap-2"
        >
          <i class="fa fa-shapes"></i> CREATE APPS!
        </a>
        <a 
          href="#getstarted" 
          class="px-8 py-4 bg-white/20 backdrop-blur-sm text-white rounded-full font-medium hover:bg-white/30 transition-colors border border-white/30 flex items-center justify-center gap-2"
        >
          <i class="fa fa-plus"></i> SEE MORE
        </a>
      </div>
    </div>
  </div>
  
  <!-- Decorative elements for playful design -->  
  <div class="absolute bottom-0 left-0 w-full h-24 bg-gradient-to-t from-white to-transparent"></div>
</section>
